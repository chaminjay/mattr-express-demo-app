<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <main
      class="d-flex flex-column align-items-center justify-content-center bg-dark vh-100"
    >
      <div class="text-center">
        <%- include("./partials/spinner.ejs") %>
        <p class="text-light p-4">
          Please wait while we're processing your bill.
        </p>
        <div class="container">
          <div class="row text-light">
            <div class="col-12">
              <p class="fs-3 mb-2">Bill Summary</p>
              <div>
                <div
                  class="card border border-info"
                  style="background-color: rgb(239, 241, 242)"
                >
                  <div class="card-body text-dark">
                    <h6 class="mb-3 fw-normal">
                      <strong>10%</strong> discount applied for this purchase
                    </h6>
                    <img
                      src="https://raw.githubusercontent.com/chaminjay/FileCloud/main/guardio/guardio-horizontal-primary.webp"
                      class="w-50 py-2"
                      alt="Guardio Logo"
                    />
                    <h6 class="fs-6 px-1">LOYALTY CUSTOMER PROGRAM</h6>
                  </div>
                </div>
                <hr />
                <div class="text-end">
                  <div
                    class="d-flex justify-content-between align-items-center"
                  >
                    <p>Subtotal:</p>
                    <p class="fs-5">$320.00</p>
                  </div>
                  <div
                    class="d-flex justify-content-between align-items-center"
                  >
                    <p>Service Charge:</p>
                    <p class="fs-5">$5.00</p>
                  </div>
                  <div
                    class="d-flex justify-content-between align-items-center"
                  >
                    <p>Discount:</p>
                    <p class="fs-5">-$32.00</p>
                  </div>
                  <hr style="height: 5px" />
                  <p class="text-primary text-end fs-3 fw-bold">$293.00</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <!-- bootstrap js -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script>
      const user = localStorage.getItem("authUser");
      if (!user) {
        location.replace("/");
      }

      function listenForCheckout() {
        var checkStatus = setInterval(function () {
          const user = localStorage.getItem("authUser");
          console.log(user);
          if (!user) {
            location.replace("/");
            clearInterval(checkStatus);
          }
        }, 1000);
      }

      listenForCheckout();
    </script>
  </body>
</html>
